"Escribir un programa que almacene el abecedario en una lista, eliminar de la lista las letras que ocupan posiciones múltiplos de 3, y muestre por pantalla la lista resultante."
using System;
using System.Collections.Generic;

class Program
{
    static void Main()
    {
        // Crear una lista para almacenar el abecedario
        List<char> abecedario = new List<char>();

        // Llenar la lista con las letras del abecedario
        for (char letra = 'A'; letra <= 'Z'; letra++)
        {
            abecedario.Add(letra);
        }

        // Eliminar las letras en posiciones múltiplos de 3
        // Recorrer la lista en orden inverso para evitar problemas al eliminar elementos
        for (int i = abecedario.Count - 1; i >= 0; i--)
        {
            // Las posiciones son 0-indexed, así que multiplicamos por 3
            if ((i + 1) % 3 == 0) // +1 porque queremos posiciones 1, 2, 3, ...
            {
                abecedario.RemoveAt(i);
            }
        }

        // Mostrar la lista resultante
        Console.WriteLine("Lista del abecedario sin letras en posiciones múltiplos de 3:");
        foreach (var letra in abecedario)
        {
            Console.Write(letra + " ");
        }

        // Salto de línea al final
        Console.WriteLine();
    }
}
